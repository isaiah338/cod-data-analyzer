@model cod_data_analyzer.Models.FileUpload
@{
    ViewData["Title"] = "Analyzer";
}
<div class="container-md text-light min-vh-100">
    <div class="row">
        <div id="rawTextUp" class="col">
            <div class="card text-dark">
                <div class="card-header">
                    <h2>Raw Text Input</h2>
                </div>
                <div class="card-body">
                    <textarea class="form-control"></textarea>
                </div>
                <div class="card-footer">
                    <button class="btn btn-outline-primary btn-large border">submit</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row my-5 d-flex align-items-start">
        @{
            var secondClassStr = User.Identity.IsAuthenticated ? "col-12" : "d-none"; 
        }
        <div id="fileUp" class="col-12 mb-4">
            <form method="post" asp-action="Upload" enctype="multipart/form-data">
                <div class="card text-dark">
                    <div class="card-header">
                        <h2>File Upload</h2>
                    </div>
                    <div class="card-body d-flex flex-row justify-content-between">
                        <label asp-for="File">Upload File: </label>
                        <input type="file" asp-for="File" class="btn btn-outline-primary btn-large border" />
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-outline-primary btn-large border">submit</button>
                    </div>
                </div>
            </form>
        </div>

        <div id="loadMatchesUp" class="@secondClassStr">
            <div class="card text-dark">
                <div class="card-header">
                    <h2>Load Saved Data</h2>
                </div>
                <div class="card-body">
                    <form method="get" asp-action="LoadMatches">
                        <button class="btn btn-outline-primary btn-large border">Load Data</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>