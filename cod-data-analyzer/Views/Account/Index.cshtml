@model cod_data_analyzer.ViewModels.AccountHomeViewModel

@{
    ViewData["Title"] = "Profile Home";
}
@* 
    check if logged in: 
    https://stackoverflow.com/questions/45888275/how-to-check-if-user-is-authenticated-in-razor-pages-of-net-core-2-0 
*@

<div>
    <h2>Account Information</h2>
    <dl>
        <dt>Username: </dt>
        <dd>@Model.AccountName</dd>
    </dl>
</div>

<div>
    <h2>My Data</h2>
    <div>
        <h3>Reset Data</h3>
        <form asp-action="ResetData" asp-controller="Analyzer" method="post">
            <button type="submit" class="btn btn-danger">Reset Multiplayer Data</button>
        </form>
    </div>
</div>